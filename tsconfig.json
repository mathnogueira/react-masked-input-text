{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es6",
			"es2017"
		],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"target": "es6",
		"module": "es6",
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"skipLibCheck": true
	},
	"include": [
		"./index.tsx",
		"./internals/**/*.ts"
	],
	"exclude": [
		"./internals/*Test.ts"
	]
}
